datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  username  String  @unique
  password  String 
}

model Basket {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  products  Product[]
}

model Product {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  price     Float
  image     String
}